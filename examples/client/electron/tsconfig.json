{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "es2018",
            "dom"
        ],
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
