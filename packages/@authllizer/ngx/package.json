{
    "name": "@authllizer/ngx",
    "version": "0.1.0",
    "description": "Angular X Authllizer Module",
    "main": "./es5/index.js",
    "es2015": "./es2015/index.js",
    "browser": "./bundles/authllizer-ngx.umd.js",
    "typings": "./typings/index.d.ts",
    "files": [
        "es5",
        "es2015",
        "bundles",
        "typings",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "run-s build:*",
        "build:es5": "ngc -t es5 -m commonjs --outDir es5",
        "build:es2015": "ngc -t es2015 -m es2015 --outDir es2015",
        "build:umd": "rollup -c ../../../config/rollup.config.ts",
        "clean": "rimraf es5 es2015 bundles typings",
        "prepublish": "run-s clean build",
        "watch": "run-p watch:*",
        "watch:es5": "npm run build:es5 -- --watch",
        "watch:es2015": "npm run build:es2015 -- --watch",
        "watch:umd": "npm run build:umd -- --watch"
    },
    "keywords": [
        "authllizer",
        "authentication",
        "auth",
        "oauth",
        "openid",
        "token",
        "jwt",
        "social",
        "ngx",
        "angular"
    ],
    "author": {
        "email": "yisraelx@gmail.com",
        "name": "Yisrael Eliav",
        "url": "https://github.com/yisraelx"
    },
    "license": "MIT",
    "homepage": "https://github.com/yisraelx/authllizer#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yisraelx/authllizer.git"
    },
    "bugs": {
        "url": "https://github.com/yisraelx/authllizer/issues"
    },
    "peerDependencies": {
        "@angular/common": "^5.2.3",
        "@angular/core": "^5.2.3",
        "@authllizer/core": "^0.1.0",
        "rxjs": "^5.5.0"
    },
    "devDependencies": {
        "@angular/common": "^5.2.3",
        "@angular/compiler": "^5.2.3",
        "@angular/compiler-cli": "^5.2.3",
        "@angular/core": "^5.2.3",
        "@authllizer/core": "^0.1.0",
        "npm-run-all": "^4.1.2",
        "rimraf": "^2.6.2",
        "rollup": "^0.55.3",
        "rxjs": "^5.5.0",
        "typescript": "^2.7.1"
    },
    "rollup": {
        "globals": {
            "@authllizer/core": "authllizer.core",
            "rxjs/Observable": "Rx",
            "@angular/core": "ng.core",
            "@angular/common": "ng.common",
            "@angular/common/http": "ng.common"
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
