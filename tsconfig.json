{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "target": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "removeComments": false,
        "importHelpers": true,
        "esModuleInterop": true,
        "stripInternal": true,
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
