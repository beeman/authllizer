{
    "private": true,
    "name": "authllizer-repository",
    "version": "0.0.0-PLACEHOLDER",
    "workspaces": {
        "packages": [
            "packages/@authllizer/*",
            "packages/adapters/*",
            "packages/dialogs/*",
            "packages/https/*",
            "packages/providers/*",
            "examples/server",
            "examples/client/*"
        ],
        "nohoist": [
            "**/webpack-dev-server",
            "**/webpack-dev-server/**"
        ]
    },
    "engines": {
        "node": ">=10"
    },
    "description": "Authllizer library repository",
    "scripts": {
        "bootstrap": "yarn install && lerna run prepublish",
        "ci:after": "yarn coverage",
        "ci:script": "yarn test",
        "clean": "lerna run clean",
        "commit": "git-cz",
        "copy:license": "lerna exec \"node -e fs.createReadStream(process.env.LERNA_ROOT_PATH+'/LICENSE').pipe(fs.createWriteStream('LICENSE'));\"",
        "coverage": "codecov -f ./coverage/**/coverage-final.json",
        "lint": "tslint -e **/*.d.ts packages/**/*.ts",
        "prerelease": "run-s copy:license",
        "release": "lerna publish --conventional-commits --message \"chore: publish %s\"",
        "test": "jest -c jest.config.json",
        "verify": "run-s lint test"
    },
    "keywords": [
        "authllizer",
        "authentication",
        "auth",
        "oauth",
        "openid",
        "token",
        "jwt",
        "social"
    ],
    "license": "MIT",
    "author": {
        "email": "yisraelx@gmail.com",
        "name": "Yisrael Eliav",
        "url": "https://github.com/yisraelx"
    },
    "homepage": "https://github.com/yisraelx/authllizer#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yisraelx/authllizer.git"
    },
    "bugs": {
        "url": "https://github.com/yisraelx/authllizer/issues"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.1.0",
        "@commitlint/prompt": "^8.1.0",
        "@types/jest": "^24.0.20",
        "@types/node": "^10.14.17",
        "codecov": "^3.0.0",
        "commitizen": "^4.0.3",
        "husky": "^3.0.5",
        "jest": "^24.9.0",
        "jest-extended": "^0.11.2",
        "lerna": "2.6.0",
        "npm-run-all": "^4.1.2",
        "rimraf": "^2.6.2",
        "rollup": "^1.21.4",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.1.2",
        "rollup-plugin-typescript2": "^0.24.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "typescript": "~3.5.3",
        "yarn": "^1.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn verify",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/prompt"
        }
    }
}
